                                    <ContentPresenter HorizontalAlignment="Center"                  
                                              VerticalAlignment="Center"/>

                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="White"></Setter>
                            <Setter Property="Background" Value="#D23232"/>
                            <Setter Property="BorderThickness" Value="1,1,2,2"></Setter>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter Property="Foreground" Value="White"></Setter>
                            <Setter Property="Background" Value="#D23232" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ToggleButton.Style>
            <ToggleButton.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="11"/>
                </Style>
            </ToggleButton.Resources>
        </ToggleButton>

        <Button HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.Column="12" Grid.Row="1" x:Name="AboutButton" BorderBrush="Transparent" Background="Transparent" Canvas.Left="146" Height="25" Width="25" Margin="0 0 0 20" Click="AboutButton_Click" >
            <Image Source="Images/info.png" Height="23" Width="23"></Image>
        </Button>

        <Canvas VerticalAlignment="Top" Grid.Column="11" Grid.ColumnSpan="2" Grid.Row="1" Margin="20,0,0,0" Height="20">

        </Canvas>
    </Grid>
</Window>
