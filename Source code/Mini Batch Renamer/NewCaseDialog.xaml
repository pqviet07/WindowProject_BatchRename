<Window x:Class="WpfApp1.NewCaseDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NewCaseDialog" Height="300" Width="300" ResizeMode="NoResize">
    <Canvas>
        <Label Content="THAY ĐỔI KIỂU CHỮ" FontSize="19" HorizontalAlignment="Center" Margin="58,23,58,0" VerticalAlignment="Top" Height="36" Width="184"/>
        <CheckBox Content="Tên tập tin toàn bộ chữ hoa" HorizontalAlignment="Center" VerticalAlignment="Top" Height="17" Width="216" Canvas.Left="45" Canvas.Top="89" Name="CheckBox1"/>
        <CheckBox Content="Tên tập tin toàn bộ chữ thường" HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.Left="45" Canvas.Top="131" Name="CheckBox2"/>
        <CheckBox HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.Left="45" Canvas.Top="173" Height="36" Width="216" Name="CheckBox3">
            <TextBlock TextWrapping="Wrap">
                Chỉ có kí tự đầu tiên mỗi từ viết hoa, còn lại viết thường"
            </TextBlock>
        </CheckBox>
        <Button Content="Cancel" IsCancel="True" Canvas.Left="49" Canvas.Top="219" Width="75"/>
        <Button Content="OK" Canvas.Left="163" Canvas.Top="219" Width="75" Name="OkButton" Click="OkButton_Click"/>
    </Canvas>
</Window>
