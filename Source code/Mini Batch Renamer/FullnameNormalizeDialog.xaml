<Window x:Class="WpfApp1.FullnameNormalizeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FullnameNormalizeDialog" Height="300" Width="300" ResizeMode="NoResize">
    <Canvas>
        <Label Content="CHUẨN HÓA HỌ TÊN" FontSize="19" HorizontalAlignment="Center" VerticalAlignment="Top" Height="35" Width="191" Canvas.Left="58" Canvas.Top="23"/>
        <CheckBox Content="Bắt đầu và kết thúc không có khoảng trắng" HorizontalAlignment="Center" VerticalAlignment="Top" Height="17" Width="216" Canvas.Left="45" Canvas.Top="89" Name="CheckBox1"/>
        <CheckBox HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.Left="45" Canvas.Top="131" Name="CheckBox2">
            <TextBlock TextWrapping="Wrap" Height="33" Width="198">
                Chỉ có kí tự đầu tiên mỗi từ viết hoa, còn lại viết thường"
            </TextBlock>
        </CheckBox>
        <CheckBox HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.Left="45" Canvas.Top="173" Height="36" Width="216" Name="CheckBox3">
            <TextBlock TextWrapping="Wrap">
                Không có quá 1 khoảng trắng giữa các từ
            </TextBlock>
        </CheckBox>
        <Button Content="Cancel" IsCancel="True" Canvas.Left="49" Canvas.Top="219" Width="75"/>
        <Button Content="OK" Canvas.Left="163" Canvas.Top="219" Width="75" Name="OkButton" Click="OkButton_Click"/>
    </Canvas>
</Window>
